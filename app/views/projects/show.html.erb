                        </div>
                        <div class="fund-do-btns">
                          <button type="button" class="btn-root" title="FUND"><i class="fa fa-credit-card-alt" aria-hidden="true"></i>&nbsp;&nbsp;FUND</button>
                          <button type="button" class="btn-root _dark" title="DO"><i class="fa fa-tasks" aria-hidden="true"></i>&nbsp;&nbsp;DO</button>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>

      <div id="Tasks" class="tabcontent">
        <div class="trello-board">
          <div class="row">

            <div class="col-lg-3 col-md-3 col-sm-3">
              <div class="trello-section">
                <div class="section-header">
                  <a href="javascript:void(0)">
