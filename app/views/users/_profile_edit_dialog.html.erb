<div class="modal fade" id="profile-img-edit" role="dialog" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">&times;</button>
        <h3>Edit Profile Image</h3>
      </div>
  
      <%= form_for @user do |f| %>
        <div class="modal-content">
          <div class="cropbox-wrap">
            <%= f.cropbox :picture %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.file_field :picture, class: 'btn btn-primary', onchange: "previewProfileImage(this);"%>
          <%= f.submit "Save Changes", :class => "btn-default-weserve" %>
          <button type="button" class="btn-alt-weserve" data-dismiss="modal"> Cancel </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
